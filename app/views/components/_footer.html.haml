%footer.inverse
  .row
    .col-sm-4
      %h5= t('footer.join_us.header')
      %p
        = t('footer.join_us.content_html')
    .col-sm-4
      %h5= t('footer.mail_us.header')
      %p
        = t('footer.mail_us.content_html')
        = mail_to('info@joatu.com')
      %h5= t('footer.support_us.header')
      %p
        %small= t('footer.support_us.bitcoin', wallet_id: "1335KiPa82fkgESyNVy7nA74W4vyQjUpwY")
    .col-sm-4
      %h5= t('footer.follow_us.header')
      %ul
        %li
          = link_to "https://www.facebook.com/joatunit" do
            = fa_icon "facebook-square 2x"
        %li
          = link_to "https://twitter.com/Joatunit" do
            = fa_icon "twitter-square 2x"
        %li
          = link_to "http://instagram.com/joatu_" do
            = fa_icon "instagram 2x"
        %li
          = link_to "http://joatu.tumblr.com/" do
            = fa_icon "tumblr-square 2x"
        %li
          = link_to "https://www.linkedin.com/company/joatu" do
            = fa_icon "linkedin-square 2x"

  .row
    .col-sm-12
      %p.copyright 
        &copy; JoatU
        = DateTime.current.strftime("%Y")
      %p.copyright
        %small
          = t('footer.tou_message_html', link: link_to(t('footer.tou_link'), tou_path))
