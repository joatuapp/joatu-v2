.col-sm-6.col-sm-offset-3.panel.panel-default
  .panel-body
    %h2= t 'devise.invitations.edit.header'
    = simple_form_for @form, :as => resource_name, :url => invitation_path(resource_name), :html => { :method => :put } do |f|
      = f.hidden_field :invitation_token
      = f.input :password
      = f.input :password_confirmation
      = f.input :pod_id, collection: Pod.all, label_method: :name, value_method: :id, label: "Pod" , include_blank: false, selected: (params[:pod_id] if params[:pod_id].present? )
      = f.input :tou_agreement, as: :boolean, label: t('tou.form.label_html', link: link_to(t('tou.form.link'), tou_path ))
      = f.button :submit, t("devise.invitations.edit.submit_button"), id:'accept-invitation'
